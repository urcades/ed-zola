---
interface Props {
  imageUrl: string;
  title: string;
  category: string;
  url?: string;
  size?: string;
}

const { imageUrl, title, category, url, size = '1' } = Astro.props;
---

<div class=`flex flex-col gap-6 md:gap-2 col-span-${size}`>
  <img src={imageUrl} alt={title} />
  <div>
    <p>{title}</p>
    <p>{category}</p>
    {url && <a href={url}>♨︎</a>}
  </div>
  <div></div>
</div>